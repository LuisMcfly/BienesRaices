extends ../layout/index

block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina 

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/recuperar-password")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de creacion de la cuenta
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa aqui tu email" type="email" name="email")

                    div.flex.items-center.justify-between
                        a.text-grey-500.text-xs(href="/auth/registro") ¿No tienes una cuenta? Crea una
                        a.text-grey-500.text-xs(href="/auth/login") ¿Ya tienes una cuenta? Inicia Sesión
        
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="recuperar password")